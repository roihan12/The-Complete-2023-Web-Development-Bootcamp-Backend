<%- include("partials/header.ejs") %>
<section class="vh-100" style="background-color: #eee;">
    <div class="container py-5 h-100">
<div class="row justify-content-center">
  <div class="col-md-6">
    <span class="anchor" id="formContact"></span>
    <!-- form contact -->
    <div class="card card-outline-secondary">
      <div class="card-header">
        <h3 class="mb-0 text-center">Update Blog</h3>
      </div>
      <div class="card-body">
        <form class="form" role="form" action="/update/<%= id %>" method="POST">
        
            <label class="mb-0" for="title" >Title</label>
            <div class="row mb-1">
              <div class="col-lg-12">
                <input
                  class="form-control"
                  id="title"
                  required=""
                  type="text"
                  name="title"
                  value=<%= title %>
                />
              </div>
            </div>
            <label class="mb-0" for="author" >Author</label>
            <div class="row mb-1">
              <div class="col-lg-12">
                <input
                  class="form-control"
                  id="author"
                  required=""
                  type="text"
                  name="author"
                  value=<%= author %>
                />
              </div>
            </div>
            <label class="mb-0" for="content" >Content</label>
            <div class="row mb-1">
              <div class="col-lg-12">
                <textarea
                  class="form-control"
                  required=""
                  rows="6"
                  name="content"
                >
                <%= content %>
              
              </textarea>
              </div>
            </div>
            <!-- <label class="mb-0" for="file" >Upload Image</label>
            <div class="row mb-1">
              <div class="col-lg-12">
                <input type="file" id="file" name="image" multiple="multiple"
                accept="image/jpeg, image/png, image/jpg"/>
              </div>
            </div> -->
        
              
              
              
               <input class="btn btn-primary btn-lg float-right" type="submit" value="Submit">
               <a href="/" class="btn  btn-secondary  btn-lg float-right  mr-3">Back</a>
           
        </form>
      </div>
    </div>
    <!-- /form contact -->
  </div>
  <!--/col-->
</div>
</div>
</div>
